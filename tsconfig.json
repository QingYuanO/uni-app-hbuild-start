{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["@dcloudio/types", "@uni-helper/uni-app-types", "wot-design-uni/global"],
		"paths": { "@/*": ["./*"] }
	},
	"vueCompilerOptions": { "plugins": ["@uni-helper/uni-app-types/volar-plugin"] },
	"include": ["./*.vue", "./**/*.vue", "./*.nvue", "./**/*.nvue", "./*.ts", "./*.d.ts", "./**/*.ts"]
}
